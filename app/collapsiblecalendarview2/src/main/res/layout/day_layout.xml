<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="@dimen/day_circle_width"
        android:layout_height="@dimen/day_circle_height"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="20"
        android:textColor="#CC011635"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_event_tag"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignTop="@id/txt_day"
        android:layout_alignEnd="@id/txt_day"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/event_drawable"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

</RelativeLayout>