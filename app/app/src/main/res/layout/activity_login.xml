<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color"
        android:transitionName="background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:transitionName="logo"
            android:src="@drawable/ic_app_forceground"
            />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_gb_login"
            android:elevation="10dp"
            app:flexDirection="column"
            android:padding="5dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_flexGrow="1">

                <TextView
                    android:id="@+id/choose_option"
                    android:layout_width="match_parent"
                    android:background="@drawable/round_drawable"
                    android:elevation="2dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/chon_co_so"
                    style="@style/Text16SemiBold"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="44dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    app:elevation="10dp"
                    style="@style/ButtonAppStyle"
                    android:layout_marginHorizontal="10dp"
                    app:backgroundTint="@color/white"
                    android:text="@string/login_with_google"
                    app:icon="@drawable/ic_google"
                    app:iconTint="@null"
                    android:layout_height="44dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:layout_alignSelf="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/fpt"/>

        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

</FrameLayout>